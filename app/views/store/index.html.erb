<% if @counter > 5 %>
  <p id="counter">You have accessed this page <%= pluralize(@counter, 'time') %></p>
<% end %>

<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h1>Your Pragmatic Catalog</h1>

<% @products.each do |product| %>
  <div class="entry">
    <%= form_tag line_items_path(:product_id => product), :remote => true do %>
      <%= image_submit_tag(product.image_url, :class => 'product_picture') %>
    <% end %>
    <h3><%= product.title %></h3>
    <%= sanitize(product.description) %>
    <div class="price_line">
      <span class="price"><%= number_to_currency(product.price, :precision => 2) %></span>
      <%= button_to 'Add to Cart', line_items_path(:product_id => product), :remote => true %>
    </div>
  </div>
<% end %>

